@model Instructor;
<h1>Are you sure you want to delete?</h1>

<form asp-action="DeleteInstructor" asp-controller="Instructor" method="post">
    <div class="form-group">
        <label asp-for="Id" hidden>Id</label>
        <input class="form-control" asp-for="Id" hidden>
        
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control"disabled></select>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control"readonly>
    </div>
    
    <button type="submit" class="btn btn-primary">Delete</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>
