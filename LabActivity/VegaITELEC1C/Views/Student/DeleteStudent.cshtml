@model Student;
<h1>Are you sure you want to delete?</h1>

<form asp-action="DeleteStudent" asp-controller="Student" method="post">
    <div class="form-group">
        <label asp-for="Id" hidden>Id</label>
        <input class="form-control" asp-for="Id" hidden placeholder="Enter Id" hidden>
    </div><br />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" readonly>
    </div><br />

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" readonly>
    </div><br />

    <div class="form-group">
        <label asp-for="IsRegular">Status</label>
        <select asp-for="IsRegular" asp-items="@Html.GetEnumSelectList(typeof(IsRegular))"disabled></select>
    </div><br />

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))"disabled></select>
    </div><br />

    <div class="form-group">
        <label asp-for="AdmissionDate">Date Enrolled</label>
        <input class="form-control" asp-for="AdmissionDate"readonly>
    </div><br />

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" placeholder="Enter Email"readonly>
    </div><br />

    <button type="submit" class="btn btn-primary">Delete</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>