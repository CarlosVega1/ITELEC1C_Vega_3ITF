@model IEnumerable<Student>;

<div><h1>Student List</h1></div>
<br />


<a class="btn btn-primary" asp-action="AddStudent">Add Student</a>

<table class="table table-light">

    <tr>
        <th colspan="7">Student</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Status</td>
        <td>Course</td>
        <td>Admission Date</td>
        
        <td>Details</td>
        <td>Update</td>
        <th>Delete</th>

    </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.IsRegular</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate</td>
            
            <td><a asp-action="ShowDetail" asp-route-id="@student.Id" class="btn btn-primary">Show Details</a></td>
            <td><a asp-action="UpdateStudent" asp-route-id="@student.Id" class="btn btn-primary">Update</a></td>
            <td><a asp-action="DeleteStudent" asp-route-id="@student.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>